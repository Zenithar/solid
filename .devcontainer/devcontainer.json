{
	"name": "Go",
	"dockerFile": "Dockerfile",
	"runArgs": [ "--cap-add=SYS_PTRACE", "--security-opt", "seccomp=unconfined" ],
	"forwardPorts": [9000],
	"settings": {
		"terminal.integrated.shell.linux": "/bin/bash",
		"go.gopath": "/go",
		"go.inferGopath": true,
		"go.useLanguageServer": true
	},
	"extensions": [
		"ms-vscode.go",
		"eamodio.gitlens",
    	"mutantdino.resourcemonitor"
	],
	"remoteUser": "vscode"
}
